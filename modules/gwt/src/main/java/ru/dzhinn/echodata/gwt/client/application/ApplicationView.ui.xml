<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="appResources" type="ru.dzhinn.echodata.gwt.client.resources.AppResources"/>

    <ui:style>
        .right_border {
            border-right: 1px solid #E5E5E5;
        }
        .left_border {
            border-left: 1px solid #E5E5E5;
        }
        .left_padding{
            margin-left: 20px;
            margin-right: 20px;
        }

        .topBackground{
            /*background:  url(/images/logo_background.png) repeat-y center 0px;*/
            background:  url(/images/onlinelogomaker-022017-1721-1868.png) no-repeat  center;
        }
    </ui:style>


    <g:DockLayoutPanel unit='EM' addStyleNames="{style.left_padding}">
        <g:north size='8'>
            <g:FlowPanel ui:field='topPanel' addStyleNames="{style.topBackground}"/>
        </g:north>

        <g:center>
            <g:SplitLayoutPanel >

                <g:west size='300' >
                    <g:LayoutPanel ui:field="navigationPanel" addStyleNames="{style.right_border}"/>
                </g:west>

                <g:center>

                    <!--<g:ScrollPanel>-->
                        <!--<g:FlowPanel ui:field='contentPanel' addStyleNames="{style.left_border}"/>-->
                    <g:LayoutPanel ui:field='contentPanel' addStyleNames="{style.left_border}"/>
                    <!--</g:ScrollPanel>-->
                </g:center>

                <g:east size="300">
                    <g:LayoutPanel ui:field='eastPanel' addStyleNames="{style.left_border}"/>
                    <!--<g:SplitLayoutPanel>-->
                        <!--<g:north size="200">-->
                            <!--<g:LayoutPanel ui:field='tabsPanel' addStyleNames="{style.left_border}"/>-->
                        <!--</g:north>-->
                        <!--<g:center>-->
                            <!--<g:LayoutPanel ui:field='tabsContentPanel' addStyleNames="{style.left_border}"/>-->
                        <!--</g:center>-->
                    <!--</g:SplitLayoutPanel>-->
                </g:east>
            </g:SplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>
