<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <!--<ui:with field="appResources" type="ru.dzhinn.echodata.web.gwt.client.resources.AppResources"/>-->

    <ui:style>
        .top_border {
            border-top: 1px solid #E5E5E5;
        }
        .bottom_border {
            border-bottom: 1px solid #E5E5E5;
        }
    </ui:style>

    <g:StackLayoutPanel unit='EM'>
        <g:stack>
            <g:customHeader size='3'>
                <g:Label text="Список"/>
            </g:customHeader>

            <g:SplitLayoutPanel ui:field="splitLayoutPanel" >
                <g:north size='200'>
                    <g:DockLayoutPanel unit="EM" addStyleNames="{style.bottom_border}">
                        <g:center>
                            <c:DataGrid ui:field='dataGrid' />
                        </g:center>

                        <g:south size="3">
                            <g:HTMLPanel >
                                <table style="width:100%">
                                    <tr>
                                        <td align='center'>
                                            <c:SimplePager ui:field='pager' />
                                        </td>
                                    </tr>
                                </table>
                            </g:HTMLPanel>
                        </g:south>
                    </g:DockLayoutPanel>
                </g:north>

                <g:center>
                    <g:ScrollPanel addStyleNames="{style.top_border}">
                        <g:Label>Podr</g:Label>
                    </g:ScrollPanel>

                </g:center>
            </g:SplitLayoutPanel>
        </g:stack>
    </g:StackLayoutPanel>
</ui:UiBinder>
