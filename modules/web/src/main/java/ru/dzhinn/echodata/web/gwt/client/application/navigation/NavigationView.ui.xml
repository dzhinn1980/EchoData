<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <!--<g:SimplePanel ui:field="main"/>-->

    <ui:with type=" ru.dzhinn.echodata.web.gwt.client.resources.EchoDataNavigationMessages" field="messages"/>
    <ui:with field="appResources" type="ru.dzhinn.echodata.web.gwt.client.resources.AppResources"/>

    <g:StackLayoutPanel unit='EM'>
        <g:stack>
            <g:customHeader size='3'>
                <g:Label text="{messages.patientListHeader}"/>
            </g:customHeader>
            <g:DockLayoutPanel unit='PX'>
                <g:north size='42'>
                    <!--<g:TextBox width="100%"/>-->
                    <g:DockLayoutPanel unit='PX'>
                        <g:east size='44'>
                            <g:PushButton>
                                <g:upFace image="{appResources.searchIcon}"/>
                            </g:PushButton>

                        </g:east>
                        <g:center>
                            <g:TextBox width="100%"/>
                        </g:center>

                    </g:DockLayoutPanel>
                </g:north>

                <g:center>
                    <g:ScrollPanel ui:field="patientListPanel"/>
                </g:center>

            </g:DockLayoutPanel>


        </g:stack>
        <g:stack>
            <g:customHeader size='3'>
                <g:Label text="{messages.templateListHeader}"/>
            </g:customHeader>
            <g:ScrollPanel ui:field="templateListPanel"/>
        </g:stack>
    </g:StackLayoutPanel>
</ui:UiBinder>
