<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">


    <ui:style>

        .top_border {
            border-top: 1px solid #E5E5E5;
        }

    </ui:style>

    <g:DockLayoutPanel unit='EM'>
        <g:north size='5'>
            <g:FlowPanel ui:field='topPanel' />
        </g:north>

        <g:center>
            <g:SplitLayoutPanel >

                <g:west size='400' >
                    <g:LayoutPanel ui:field="navigationPanel"/>
                </g:west>

                <g:center>
                    <g:LayoutPanel ui:field='contentPanel' styleName="{style.top_border}"/>
                </g:center>
            </g:SplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>
