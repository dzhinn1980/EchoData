<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="appResources" type="ru.dzhinn.echodata.web.gwt.client.resources.AppResources"/>

    <ui:style>
        .right_border {
            border-right: 1px solid #E5E5E5;
        }
        .left_border {
            border-left: 1px solid #E5E5E5;
        }
        .left_padding{
            margin-left: 20px;
            margin-right: 20px;
        }

        /*@sprite*/
        .topBackground{
            /*gwt-image: 'logoBackground';*/
            background:  url(/images/logo_background.png) repeat-y center 0px;
            /*background:   repeat-x 0px -50px;*/
        }
    </ui:style>


    <g:DockLayoutPanel unit='EM' addStyleNames="{style.left_padding}">
        <g:north size='5'>
            <g:FlowPanel ui:field='topPanel' addStyleNames="{style.topBackground}"/>
        </g:north>

        <g:center>
            <g:SplitLayoutPanel >

                <g:west size='400' >
                    <g:LayoutPanel ui:field="navigationPanel" addStyleNames="{style.right_border}"/>
                </g:west>

                <g:center>
                    <g:LayoutPanel ui:field='contentPanel' addStyleNames="{style.left_border}"/>
                </g:center>
            </g:SplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>
